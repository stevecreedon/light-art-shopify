<!-- start social -->
<div class="social-links">
	<span class="st_twitter_large" displayText="Tweet"></span><span class="st_facebook_large" displayText="Facebook"></span><span class="st_ybuzz_large" displayText="Yahoo! Buzz"></span><span class="st_gbuzz_large" displayText="Google Buzz"></span><span class="st_email_large" displayText="Email"></span><span class="st_sharethis_large" displayText="ShareThis"></span>
</div>
<!-- end social -->



<!-- START CONTENT -->
<div id="summary" class="clear">
	
	<!-- START IMAGES -->
	<div id="images">

       <div class="gift-tag">
        <img class="gift-tag-img" src="{{ 'tag.png' | asset_url }}"/>
		<h1>{{ product.title | escape }}</h1>    
       </div>  
		<!-- START IMAGE -->
		<div id="image" class="clear">
			<img src="{{ product.images[0] | product_img_url: "large" }}" alt="{{ product.title | escape }}" />
                        <div style="clear:both; height: 2px;">&nbsp;</div>
		</div>
		<!-- END IMAGE -->
               
		<!-- START THUMBS -->
		<div id="thumbs">
     
                           {% if product.images.size > 1 %}
                              {% for image in product.images %}
			        
                                 <a href="{{ image | product_img_url: "large" }}" rel="lightbox-images">
                                   <img src="{{ image | product_img_url: 'small' }}" alt="{{ product.title | escape }}" />
                                 </a>
                          
                            {% endfor %}
                           {% endif %}
		</div>
		
		{% include 'also_like' %}
        
		<!-- END THUMBS -->
	</div>
	<!-- END IMAGES -->
	
	<!-- START RIGHT COL -->
	<div id="details">
		
		<!-- buy buttons -->
		<div id="options">
			<form method="post" action="/cart/add" style="border-top: none;">{% if product.variants.size > 1 %}
				<!-- START VARIANTS -->
				<div id="variants">
					<div class="border">
						<select name="id" id="id">{% for variant in product.variants %}{% if variant.available %}
							<option value="{{ variant.id }}">{{ variant.title | escape }} ({{ variant.price | money }})</option>{% else %}
							<option value="{{ variant.id }}" disabled="disabled">{{ variant.title | escape }} ({{ variant.price | money }}) - SOLD OUT</option>{% endif %}{% endfor %}
						</select>
					</div>
				</div>
				<!-- END VARIANTS -->{% else %}{% for variant in product.variants %}
				<input type="hidden" name="id" value="{{ variant.id }}" />{% endfor %}{% endif %}
				<!-- START BUY -->
				<div id="buy" class="clear">
				    {% if product.available %}
                         <p class="in-stock">{{ product.variants.first.inventory_quantity }} IN STOCK NOW</p>
					     <h4 id="price">
						     <span>{{ product.price | money }}</span>
					         {% if product.compare_at_price_max > product.price %} 
					           &nbsp;&nbsp;<del>{{ product.compare_at_price_max | money }} plus P&amp;P</del>
					         {% endif %}
					     </h4>
					     <input type="image" src="{{ 'add-me-to-your-basket.png?v1' | asset_url }}" alt="BUY THIS" id="add" />
					{% else %}
						
						{% if product.tags contains 'coming soon' %}
							<h6>Coming Soon!</h6>
						{% else %} 
							<h6>They've all gone!</h6>
						{% endif %}
						<p><a href="http://lightart.wufoo.com/forms/let-me-know-when-you-have-some/">click here to find out when it's in stock</a></p>	
					{% endif %}
				</div>
				<!-- END BUY -->
			</form>
		</div>
		<!-- END buy buttons -->
		
		<div id="for">
			<h2>People who like this are often:</h2>
			{% if product.metafields.product.for contains 'kids' %}
				{{ 'suitable-for-kids.png' | asset_url | img_tag }}
			{% endif %}
			
			{% if product.metafields.product.for contains 'dads' %}
				{{ 'suitable-for-dads.png' | asset_url | img_tag }}
			{% endif %}
			
			{% if product.metafields.product.for contains 'cool' %}
				{{ 'suitable-for-cool.png' | asset_url | img_tag }}
			{% endif %}
		</div>
		
		<div id="features">
			{% include 'features' %}
		</div>
		
		<div id="delivery">
			<p><span style="font-weight: bold; background-color: #FC0361; color: white; padding: 2px;">Free Delivery</span> anywhere in the UK.</p>
			<p><span style="font-weight: bold;  background-color: #FC0361; color: white; padding: 2px;">We also deliver worldwide</span> but have to charge an extra Â£10 for that, sorry.</p> 
			{% if product.metafields.product.features contains 'LED' %}
			<p><span style="font-weight: bold;  background-color: #FC0361; color: white; padding: 2px;">Lifetime Guarantee</span> on electrical components.</p> 
			{% endif %}
		</div>	
		

		
		<!-- START DESC -->
		<div id="desc">
			<h2>More about {{ product.metafields.product.name | capitalize }}:</h2>
			{{ product.description }}
		</div>
		<!-- END DESC -->
       

	</div>
	<!-- END RIGHT COL-->
</div>
<!-- END CONTENT -->
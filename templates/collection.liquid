{% paginate collection.products by 9 %}<!-- START EXCERPT -->
<div id="excerpt">
	<h1>{{ collection.title | escape }}</h1>
</div>
<!-- END EXCERPT -->
<!-- START PRODUCTS -->{% if collection.products.size > 0 %}
<div id="collection-bg" class="rounded3">
	<div id="collection-description">
		{{ collection.description }}
	</div>	
	<ul id="products" class="clear">{% for product in collection.products %}
		<!-- START PRODUCT {{ forloop.index }} -->
		<li{% cycle ' class="rounded3"', ' class="rounded3"',' class="rounded3 end"' %}>
		    <a href="{{ product.url }}">{{ 'view-me.png' | asset_url | img_tag }}</a>
			<!-- START IMAGE -->
			<div class="image">
				<div class="align">
					<div><a href="{{ product.url }}"><img src="{{ product.images[0] | product_img_url: "medium" }}" alt="{{ product.title | escape }}" /></a></div>
				</div>
			</div>
			<!-- END IMAGE -->
			<h3><a href="{{ product.url }}">{{ product.title | escape | truncate: 25 }}</a></h3>
			<p>{{ product.price | money }}{% if product.compare_at_price_max > product.price %} <del>{{ product.compare_at_price_max | money }}</del>{% endif %}</p>
			
		</li>
		<!-- END PRODUCT {{ forloop.index }} -->{% endfor %}
	</ul>{% else %}
	<p id="empty">There are no products in this collection.</p>{% endif %}
	<!-- END PRODUCTS -->{% if paginate.pages > 1 %}
</div><!-- end collection bg -->

<!-- START PAGINATE -->
<div id="paginate">
	{{ paginate | default_pagination }}
</div>
<!-- END PAGINATE -->{% endif %}{% endpaginate %}